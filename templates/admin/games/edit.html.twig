{% extends "base.html.twig" %}

{% block title %}Escape game :
	{{ game.title }}
{% endblock %}

{% block body %}
	<div class="title-container">
		<img src="{{ asset('images/title_decorator_left.svg') }}" alt="title decorator">
		<h1>Edition de "{{ game.title }}"</h1>
		<img src="{{ asset('images/title_decorator_right.svg') }}" alt="title decorator">
	</div>
	{{ form_start(form) }}
	<div id="game-form-container">
		{{ form_row(form.title) }}
		{{ form_row(form.time) }}
		<div class="form-group">
			{{ form_label(form.difficulty) }}
			<div class="input-range-container">
				{{ form_widget(form.difficulty) }}
				<div class="range-value"></div>
			</div>
		</div>
		{{ form_rest(form) }}
	</div>
	{{ form_end(form) }}
{% endblock %}
